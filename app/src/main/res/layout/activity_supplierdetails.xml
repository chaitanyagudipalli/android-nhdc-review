<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:padding="10dip"
        android:shrinkColumns="2"
        android:layout_height="match_parent">
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:id="@+id/facilityIdLabel"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                style="@style/TabeRowTitle"
                android:text="Id "/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/facilityId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TabeRowValue"
                android:layout_margin="2dp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:id="@+id/facilityNameLabel"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                style="@style/TabeRowTitle"
                android:text="Name"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/facilityName"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:id="@+id/facilityCategoryLabel"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_column="0"
                style="@style/TabeRowTitle"
                android:text="Role"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_column="1"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/facilityCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                style="@style/TabeRowValue"
                android:layout_margin="2dp" />
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                style="@style/TabeRowTitle"
                android:text="Party type"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/partyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TabeRowValue"
                android:layout_margin="2dp" />
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_column="0"
                style="@style/TabeRowTitle"
                android:text="Contact Number"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_column="1"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/supplierContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                style="@style/TabeRowValue"
                android:layout_margin="2dp" />
                <Button
                    android:id="@+id/callButton"
                    android:layout_marginLeft="20dp"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:background="@drawable/call_button"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_column="0"
                style="@style/TabeRowTitle"
                android:text="Address"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_column="1"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/supplierAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                style="@style/TabeRowValue"
                android:layout_margin="2dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>