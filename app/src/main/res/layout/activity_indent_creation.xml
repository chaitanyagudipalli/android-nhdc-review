<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="in.vasista.vsales.indent.IndentCreationActivity"
        android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Category"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/category" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="15dip"
            android:id="@+id/linearLayout2">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Scheme"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/scheme" />
        </LinearLayout>
        <AutoCompleteTextView
            android:id="@+id/autoCompleteRetailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dip"
            android:completionThreshold="1"
            android:ems="10"
            android:hint="Select Supplier"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >

        </AutoCompleteTextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/primary_light"
            android:layout_marginTop="15dp"
            android:id="@+id/textView3"
            android:layout_below="@+id/autoCompleteRetailer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/background"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/textView3"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:id="@+id/indentinfo" />
            <AutoCompleteTextView
                android:id="@+id/autoCompleteProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dip"
                android:completionThreshold="1"
                android:ems="10"
                android:hint="Select product"

                >

            </AutoCompleteTextView>

            <EditText
                android:id="@+id/specifications"
                android:layout_width="match_parent"
                android:hint="Specifications"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/cottonLayout"
                android:layout_width="match_parent"
                android:background="@color/background"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/quantitynos"
                    android:layout_width="match_parent"
                    android:hint="Bale quantity"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Uom"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/uom" />
                </LinearLayout>
                <EditText
                    android:id="@+id/bundlewt"
                    android:layout_width="match_parent"
                    android:hint="Bundle Weight in Kgs"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/bundleUnitPrice"
                    android:layout_width="match_parent"
                    android:hint="Bundle Weight in Kgs"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <EditText
                android:id="@+id/totalweight"
                android:layout_width="match_parent"
                android:hint="Total Weight in Kgs"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/unitprice"
                android:layout_width="match_parent"
                android:hint="Unit Price (KGS)"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/addIndent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
