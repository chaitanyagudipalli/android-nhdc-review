<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:fillViewport="true"

    tools:context="in.vasista.vsales.SupplierDetailedActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableLayout
        android:padding="10dip"
        android:shrinkColumns="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                style="@style/TabeRowTitle"
                android:layout_margin="2dp"
                android:text="@string/supplier_name"/>
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:id="@+id/partyName"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                style="@style/TabeRowTitle"
                android:layout_margin="2dp"
                android:text="@string/address"/>
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:id="@+id/address"/>
        </TableRow>

        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                style="@style/TabeRowTitle"
                android:layout_margin="2dp"
                android:text="@string/phoneNumber"
                 />
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:id="@+id/contactNumber"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                style="@style/TabeRowTitle"
                android:layout_margin="2dp"
                android:text="@string/email"
                 />
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:id="@+id/email"/>
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                style="@style/TabeRowTitle"
                android:layout_margin="2dp"
                android:text="@string/cst_num"
                 />
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:id="@+id/cstNum" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                style="@style/TabeRowTitle"
                android:layout_margin="2dp"
                android:text="@string/tan_num"
                 />
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:id="@+id/tanNum" />
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                style="@style/TabeRowTitle"
                android:layout_margin="2dp"
                android:text="@string/pan_num"
                 />
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:id="@+id/panNum" />
        </TableRow>
    </TableLayout>

</LinearLayout>
</ScrollView>
