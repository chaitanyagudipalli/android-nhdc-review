<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/listitem_border">
  <TextView
    android:id="@+id/facilityRowId"
    android:layout_width="0dp"
    android:layout_weight="2"
    android:padding="5dp" 
    android:textSize="12sp" 
    android:textStyle="bold"         
    android:layout_height="wrap_content" 
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
  />
    <TextView
    android:id="@+id/facilityRowName"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:padding="5dp" 
    android:textSize="12sp" 
    android:textStyle="bold"
    android:layout_height="wrap_content" 
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
  />
    <TextView
    android:id="@+id/facilityRowCategory"
    android:layout_width="0dp"
    android:layout_weight="1"   
    android:padding="5dp" 
    android:textSize="12sp"
    android:textStyle="bold"
    android:layout_height="wrap_content" 
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
  />
  <TextView
      android:id="@+id/facilityRowQty"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:padding="5dp"
      android:textSize="12sp"
      android:textStyle="bold"
      android:layout_height="wrap_content"
      android:scrollbars="vertical"
      android:fadingEdge="vertical"
      />
    <TextView
        android:id="@+id/facilityRowBal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        />
</LinearLayout>