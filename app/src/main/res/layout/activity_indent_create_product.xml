<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="in.vasista.vsales.indent.IndentCreateProduct"
    android:fillViewport="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@color/colorAccent"
            android:text="@string/loom_details"/>
        <TableLayout
            android:padding="10dip"
            android:shrinkColumns="*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow android:paddingTop="5dip"
                android:paddingBottom="5dip">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dip"
                    style="@style/TabeRowTitle"
                    android:textSize="12sp"
                    android:layout_margin="2dp"
                    android:text="@string/loom_type"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    style="@style/TabeRowTitle"
                    android:textSize="12sp"
                    android:layout_margin="2dp"
                    android:text="@string/no_of_looms"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    style="@style/TabeRowTitle"
                    android:textSize="12sp"
                    android:layout_margin="2dp"
                    android:text="@string/eligible_quota"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    style="@style/TabeRowTitle"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:layout_margin="2dp"
                    android:text="@string/balance_quota"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    style="@style/TabeRowTitle"
                    android:layout_margin="2dp"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:text="@string/used_quota"/>
            </TableRow>
            <TableRow android:paddingTop="5dip"
                android:id="@+id/cotton_row_40a"
                android:visibility="gone"
                android:paddingBottom="5dip">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:id="@+id/c40a"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/c40an"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/c40ae"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/c40ab"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/c40au"/>
            </TableRow>
            <TableRow android:paddingTop="5dip"
                android:id="@+id/cotton_row_40b"
                android:visibility="gone"
                android:paddingBottom="5dip">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:textSize="12sp"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/c40u"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/c40un"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/c40ue"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/c40ub"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/c40uu"/>
            </TableRow>
            <TableRow android:paddingTop="5dip"
                android:id="@+id/silk_row"
                android:visibility="gone"
                android:paddingBottom="5dip">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:textSize="12sp"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/silk"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/silkn"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/silke"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/silkb"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/silku"/>
            </TableRow>
            <TableRow android:paddingTop="5dip"
                android:id="@+id/wool_row_10a"
                android:visibility="gone"
                android:paddingBottom="5dip">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:textSize="12sp"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/w10a"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/w10an"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/w10ae"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/w10ab"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/w10au"/>
            </TableRow>
            <TableRow android:paddingTop="5dip"
                android:id="@+id/wool_row_40a"
                android:visibility="gone"
                android:paddingBottom="5dip">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:id="@+id/w40a"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/w40an"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/w40ae"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/w40ab"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/w40au"/>
            </TableRow>
            <TableRow android:paddingTop="5dip"
                android:id="@+id/wool_row_10b"
                android:visibility="gone"
                android:paddingBottom="5dip">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:id="@+id/w10b"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/w10bn"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:id="@+id/w10be"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:id="@+id/w10bb"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TabeRowValue"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:id="@+id/w10bu"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:id="@+id/selectProduct"
                android:text="Select product"/>
            <AutoCompleteTextView
                android:id="@+id/autoCompleteProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:completionThreshold="1"
                android:ems="10"
                android:hint="Select product"

                >

            </AutoCompleteTextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="Specifications"/>
            <EditText
                android:id="@+id/specifications"
                android:layout_width="match_parent"
                android:hint="Specifications"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/cottonLayout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="15dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity (Nos)"/>
                        <EditText
                            android:id="@+id/quantitynos"
                            android:layout_width="match_parent"
                            android:hint="Quantity (Nos)"
                            android:inputType="numberDecimal"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uom"/>
                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/uom" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="15dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bundle Wt (Kgs)"/>
                        <EditText
                            android:id="@+id/bundlewt"
                            android:layout_width="match_parent"

                            android:inputType="numberDecimal"
                            android:hint="Bundle Wt (Kgs)"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="15dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unit Price (Bundle)"/>
                        <EditText
                            android:id="@+id/bundleUnitPrice"
                            android:layout_width="match_parent"
                            android:inputType="numberDecimal"
                            android:hint="Unit Price (Bundle)"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/qtyKg"
                        android:text="Qty (Kgs)"/>
                    <EditText
                        android:id="@+id/totalweight"
                        android:layout_width="match_parent"
                        android:inputType="numberDecimal"
                        android:hint="Qty (Kgs)"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/unitPriceText"
                        android:text="Unit Price (Kgs)"/>
                    <EditText
                        android:id="@+id/unitprice"
                        android:layout_width="match_parent"
                        android:inputType="numberDecimal"
                        android:hint="Unit Price (Kgs)"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:padding="10dip"
                android:shrinkColumns="2"
                android:layout_height="match_parent">
                <TableRow android:paddingTop="5dip"
                    android:paddingBottom="5dip">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textColor="@color/colorAccent"
                        style="@style/TabeRowTitle"
                        android:text="Amt (Rs) "/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorAccent"
                        android:text=":"/>
                    <TextView
                        android:id="@+id/totalAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        style="@style/TabeRowValue"
                        android:layout_margin="2dp"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/addIndent"
                android:layout_gravity="right"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
