<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:padding="10dip"
        android:shrinkColumns="2"
        android:layout_height="match_parent">
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:id="@+id/stockname"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                style="@style/TabeRowTitle"
                android:text="@string/product_name"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/stock_prod_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TabeRowValue"
                android:layout_margin="2dp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:id="@+id/specification"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                style="@style/TabeRowTitle"
                android:text="@string/specification"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/stock_prod_spec"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:id="@+id/stock_depot"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                style="@style/TabeRowTitle"
                android:text="@string/depot"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/stock_prod_depot"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:id="@+id/stock_supplier"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                style="@style/TabeRowTitle"
                android:text="@string/supplier"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/stock_prod_suppl"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:id="@+id/stock_qty"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                style="@style/TabeRowTitle"
                android:text="@string/quantity"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/stock_prod_qty"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <TextView
                android:id="@+id/stock_price"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                style="@style/TabeRowTitle"
                android:text="@string/unit_price"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <TextView
                android:id="@+id/stock_prod_price"
                android:layout_width="wrap_content"
                style="@style/TabeRowValue"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="bold" />
        </TableRow>


    </TableLayout>
</LinearLayout>