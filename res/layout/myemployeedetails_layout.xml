<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/orderTitle"
        style="@style/TitleBar" >

        <ImageButton
            style="@style/TitleBarAction"
            android:contentDescription="@string/description_home"
            android:onClick="onClickHome"
            android:src="@drawable/title_home" />

        <ImageView style="@style/TitleBarSeparator" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="bottom" >

            <TextView
                android:id="@+id/employeeIdHeader"
                style="@style/TitleBarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="My Details"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/myEmployeeRefreshProgress"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/employeeSearch"
                android:indeterminate="true"
                android:visibility="invisible" />

            <ImageView
                style="@style/TitleBarSeparator"
                android:layout_toLeftOf="@+id/employeeSearch" />

            <ImageButton
                android:id="@+id/employeeSearch"
                style="@style/TitleBarAction"
                android:layout_alignParentRight="true"
                android:src="@drawable/title_search2" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/retailerdetail_border"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/employeeDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="right"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/employeeNameLabel"
                style="@style/TextLabel"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:text="Name: " />

            <TextView
                android:id="@+id/employeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/employeeNameLabel"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/employeeIdLabel"
                style="@style/TextLabel"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/employeeId"                
                android:layout_margin="2dp"
                android:text="Code: " />

            <TextView
                android:id="@+id/employeeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"                
                android:layout_margin="2dp"
                android:textSize="12sp"
                android:textStyle="bold" />            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/employeeDeptLabel"
                style="@style/TextLabel"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Dept: " />

            <TextView
                android:id="@+id/employeeDept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/employeeDeptLabel"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/employeePosLabel"
                style="@style/TextLabel"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:text="Position: " />

            <TextView
                android:id="@+id/employeePosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/employeePosLabel"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/employeeJoinDateLabel"
                style="@style/TextLabel"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:text="Join Date: " />

            <TextView
                android:id="@+id/employeeJoinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/employeeJoinDateLabel"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/employeePhoneLabel"
                style="@style/TextLabel"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/employeePhone"                
                android:layout_margin="2dp"
                android:text="Phone: " />

            <TextView
                android:id="@+id/employeePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_alignParentRight="true"                
                android:textSize="12sp"
                android:textStyle="bold" />            
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/listheader_border"
            android:padding="5dp" >

            <TextView
                android:id="@+id/employeeLeaveBalanceHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_centerInParent="true"
                android:text="Leave Balance"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/employeeEarnedLeaveLabel"
                style="@style/TextLabel"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Earned Leave Balance: " />

            <TextView
                android:id="@+id/employeeEarnedLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/employeeEarnedLeaveLabel"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/employeeCasualLeaveLabel"
                style="@style/TextLabel"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Casual Leave Balance: " />

            <TextView
                android:id="@+id/employeeCasualLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/employeeCasualLeaveLabel"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/employeeHalfPayLeaveLabel"
                style="@style/TextLabel"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Half Pay Leave Balance: " />

            <TextView
                android:id="@+id/employeeHalfPayLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/employeeHalfPayLeaveLabel"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/listheader_border"
            android:padding="5dp" >

            <TextView
                android:id="@+id/employeePaySlipHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_centerInParent="true"
                android:text="Payslips"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>