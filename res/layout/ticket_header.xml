<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/listheader_border">
    <TextView android:id="@+id/column_id_header"
        android:layout_width="0dp"
    	android:layout_weight="1"    
    	android:padding="5dp" 
    	android:textSize="12sp" 
    	android:textStyle="bold"        	   
    	android:layout_height="wrap_content" 
        android:text="Id"    	
        />
    <TextView android:id="@+id/column_crdate_header"
        android:layout_width="0dp"
    	android:layout_weight="2"    
    	android:padding="5dp" 
    	android:textSize="12sp" 
    	android:textStyle="bold"        	   
    	android:layout_height="wrap_content" 
        android:text="Created Date"    	
        />    
    <TextView android:id="@+id/column_type_header"
        android:layout_width="0dp"
    	android:layout_weight="1" 
    	android:padding="5dp"   
    	android:textSize="12sp" 
    	android:textStyle="bold"         	 
    	android:layout_height="wrap_content" 
        android:text="Type"    	
        />  
    <TextView android:id="@+id/column_status_header"
        android:layout_width="0dp"
    	android:layout_weight="1" 
    	android:layout_marginRight="20dp"    	   
    	android:gravity="right"     	
    	android:padding="5dp"   
    	android:textSize="12sp" 
    	android:textStyle="bold"         	 
    	android:layout_height="wrap_content" 
        android:text="Status"    	
        />              
</LinearLayout>